{
  "name": "flask-react-boilerplate",
  "version": "0.1.0",
  "author": "Yale DH Lab",
  "license": "MIT",
  "description": "Minimal boilerplate for a Flask + React application",
  "main": "server/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duhaime/react-boilerplate.git"
  },
  "scripts": {
    "start": "webpack-dev-server --port 7081 --history-api-fallback",
    "build": "webpack --config webpack.config.js",
    "compress": "webpack --config webpack.config.js",
    "production": "npm run build && npm run serve",
    "serve": "FLASK_APP=server/app.py flask run --port=7082",
    "lint-js": "eslint -c './src/config/.eslintrc.js' src/",
    "lint-py": "pylint server/app.py",
    "lint": "npm run lint-js && npm run lint-py",
    "jest": "jest",
    "test": "npm run build && npm run lint && npm run jest && pytest"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "connected-react-router": "^4.2.3",
    "history": "^4.7.2",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.13",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-form": "^7.0.4",
    "redux-freeze": "^0.1.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "webpack": "3.5.6",
    "webpack-cli": "^3.3.2",
    "webpack-merge": "^4.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.1.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "clean-webpack-plugin": "^0.1.17",
    "compression-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.2.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.16.0",
    "eslint-plugin-react": "^7.6.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.1.4",
    "json-loader": "^0.5.4",
    "jsx-loader": "^0.13.2",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "prop-types": "^15.5.10",
    "react-test-renderer": "^15.2.0",
    "style-loader": "^0.18.2",
    "webpack-dev-server": "^3.1.11"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
